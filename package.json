{
  "name": "create-ecubus-plugin",
  "version": "0.0.12",
  "description": "Create EcuBus plugin projects from a template",
  "type": "module",
  "author": "EcuBus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecubus/ecubus-plugin-template"
  },
  "keywords": [
    "ecubus",
    "plugin",
    "template",
    "create"
  ],
  "bin": {
    "create-ecubus-plugin": "./bin/create.js"
  },
  "files": [
    ".gitignore",
    "bin",
    "src",
    "icon.png",
    "index.html",
    "manifest.json",
    "env.d.ts",
    "tsconfig.json",
    "tsconfig.app.json",
    "tsconfig.node.json",
    "vite.main.config.ts",
    "vite.renderer.config.ts",
    "DEVELOPMENT.md",
    "README.md"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:main dev:renderer",
    "dev:main": "vite build --config vite.main.config.ts --watch",
    "dev:renderer": "vite dev --config vite.renderer.config.ts",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@ecubus-pro/main-plugin-sdk": "^0.0.9",
    "@ecubus-pro/renderer-plugin-sdk": "^0.0.10",
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.11.5",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "jiti": "^2.5.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vue-tsc": "^3.1.0",
    "wujie": "^1.0.29"
  }
}
